<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="124dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/viewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nombre:"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints"/>


    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/viewNombre"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/viewTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TelÃ©fono"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/viewTelefono"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefono"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints"
        android:src="@drawable/ic_edit_24"
        android:backgroundTint="@color/darkBlue"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBorrrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/fabEditar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="377dp"
        android:src="@drawable/ic_delete_24"
        android:backgroundTint="@color/darkBlue"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLlamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/fabBorrrar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="377dp"
        android:src="@drawable/ic_phone_24"
        android:backgroundTint="@color/darkBlue"/>
</androidx.constraintlayout.widget.ConstraintLayout>